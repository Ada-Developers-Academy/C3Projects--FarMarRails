<!DOCTYPE html>
<html>
  <head>
    <title>C3ProjectsFarmarrails</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href='//fonts.googleapis.com/css?family=Roboto:100,300,500|Old+Standard+TT:400,700' rel='stylesheet' type='text/css'>
  </head>

  <div class="container">
    <header id= "top">
      <% num = rand(0..7) %>

      <% images = [image_tag("FarMarBanner1.jpg"),
        image_tag("FarMarBanner2.jpg"),
        image_tag("FarMarBanner3.jpg"),
        image_tag("FarMarBanner4.jpg"),
        image_tag("FarMarBanner5.jpg"),
        image_tag("FarMarBanner6.jpg"),
        image_tag("FarMarBanner7.jpg"),
        image_tag("FarMarBanner8.jpg")]
      %>
      
      <%= images[num] %>

    </header>

    <body>
    <%= yield %>
    </body>

    <footer>
      <%= link_to "Top", "#top" %> |
      <%= link_to "Home", "/" %> |
      <%= link_to "Markets", "/markets" %> |
      <%= link_to "Vendors", "/vendors" %>
    </footer>

  </div>
</html>
