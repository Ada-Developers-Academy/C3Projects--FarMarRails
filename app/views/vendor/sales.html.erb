<%= params %>
<h1><%= "#{@vendor.name}'s Sales" %></h1>
<table>
<tr>
  <th>
    ID
  </th>
  <th>
    Amount
  </th>
  <th>
    Purchase Time
  </th>
  <th>
    Product
  </th>
</tr>
<tbody>
  <% @sales.each do |sale| %>
      <tr>
        <td>
          <%= sale.id %>
        </td>
        <td>
          <%= "$#{sale.amount}" %>
        </td>
        <td>
          <%= sale.purchase_time %>
        </td>
        <td>
          <%= sale.product.name %>
        </td>
      </tr>
  <% end %>
  <tr>
    <th>
      Total Amount
    </th>
    <td>
      <%= "$#{@total_amount}" %>
    </td>
  </tr>
</tbody>
</table>

<%= button_to "Show Sales from Current Month", sales_vendor_path, params: {show_current_month: true} %>
<%= button_to "Show All Sales", sales_vendor_path, params: {show_current_month: false} %>
