  <fieldset class="edit_market_form">
	<legend>Edit a Market</legend>
	<%= render partial: "form", locals: { item: @market,
                  											name_desc: "Market Name",
                  											name_placeholder: "",
                  											name_value: @market.name,
                  											address_desc: "Address",
                  											address_placeholder: "",
