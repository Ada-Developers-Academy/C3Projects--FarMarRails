<h1>This is a regular market view</h1>

<%= render 'shared/show_market', { market: @market } %>

<%= link_to "Edit this market", edit_market_path %>

<h3>Vendors</h3>

<%= link_to "Create a new vendor for this market", new_market_vendor_path(@market) %>

<ul>
  <% @market.vendors.each do |vendor| %>
    <li><%= link_to vendor.name, market_vendor_path(@market, vendor) %>
      <%= link_to 'Edit Vendor', edit_market_vendor_path(@market, vendor) %>
      <%= button_to 'Delete Vendor', market_vendor_path(@market, vendor),
          method: :delete, data: { confirm: "Are you sure you want to delete this vendor?" } %>
    </li>
  <% end %>
</ul>
