<h2> <%="#{@market.name}"%> </h2>

<h3>Vendors</h3>

<ul>
  <% @vendors.each do |vendor| %>
    <li> <%= link_to "#{vendor.name}", "/vendors/#{vendor.id}" %> </li>
    <%= button_to "Delete Vendor!", "/markets/#{@market.id}/vendors/#{vendor.id}", method: :delete, data: { confirm: "Are You Sure You Want to Delete This Vendor?" } %>
  <% end %>
</ul>

<%= link_to "Add A Vendor to This Market", new_market_vendor_path(@market.id) %>

<h3>Market Attributes</h3>

<ul>
  <li>Address: <%=@market.address %></li>
  <li>City: <%=@market.city %></li>
  <li>County: <%=@market.county %></li>
  <li>State: <%=@market.state %></li>
  <li>Zipcode: <%=@market.zip %></li>
</ul>

<%= link_to "Edit Market Details", edit_market_path(@market.id) %>
