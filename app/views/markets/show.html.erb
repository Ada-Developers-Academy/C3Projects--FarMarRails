<h1>Market Details</h1>

<%= link_to "Edit this market", edit_market_path(@market.id) %>
<%= link_to "Back to market list", markets_path(@market.id) %>


<table>
  <th>Name</th>
  <th>Address</th>
  <th>City</th>
  <th>County</th>
  <th>State</th>
  <th>Zip</th>

  <tr>
    <td><%= @market.name %></td>
    <td><%= @market.address %></td>
    <td><%= @market.city %></td>
    <td><%= @market.county %></td>
    <td><%= @market.state %></td>
    <td><%= @market.zip %></td>
  </tr>

</table>

<h2>The Vendors for This Market</h2>

<table>

  <% @display_vendors.each do |vendor| %>
  <tr>
    <td><%= vendor.name %></td>
    <td><%= button_to "Edit vendor", edit_market_vendor_path(@market.id, vendor.id), method: "get" %></td>

    <td><%= button_to "Delete vendor", "/markets/#{@market.id}/vendors/#{vendor.id}", method: "delete", data: { confirm: "Are you sure you want to delete this vendor?"} %></td>
  </tr>
  <% end %>

</table>

<%= link_to "Add a vendor", new_market_vendor_path(@market.id) %>
