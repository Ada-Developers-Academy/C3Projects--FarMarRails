
<header>
  <h1> <%= @market.name %> </h1>
</header>

<section class="market-details">
  <h3 class="section-header"> Market Details</h3>

  <table class="details">
    <tr>
      <td>ID</td>
      <td><%= "#{ @market.id }" %></td>
    </tr>
    <tr>
      <td>Market Name</td>
      <td><%= "#{ @market.name }" %></td>
    </tr>
    <tr>
      <td>Location</td>
      <td><%= "#{ @market.address }" %></td>
    </tr>
    <tr>
      <td>City</td>
      <td><%= "#{ @market.city }" %></td>
    </tr>
    <tr>
      <td>County</td>
      <td><%= "#{ @market.county }" %></td>
    </tr>
    <tr>
      <td>State</td>
      <td><%= "#{ @market.state }" %></td>
    </tr>
    <tr>
      <td>Zipcode</td>
      <td><%= "#{ @market.zipcode }" %></td>
    </tr>
  </table>
</section>



<div class="market-vendors">
  <h3 class="section-header">Market's Vendors</h3>

  <% @vendors.each do |vendor| %>
    <ul class="market-location">
      <li>
        <div><%= "##{ vendor.id }" %></div>
        <%= "#{ vendor.name }, Staff: #{ vendor.number_of_employees }" %>
      </li>
    </ul>
  <% end %>
</div>
