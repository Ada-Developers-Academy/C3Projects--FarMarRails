<h1>All Markets</h1>
<p>
  <a href= "/markets/new">+ Add a market</a>
</p>
<table>
  <thead>
    <tr>
      <th>
        Name <%= button_to "&#8595".html_safe, "/markets/name_sort"%>
      </th>
      <th>
        City
      </th>
      <th>
        State
      </th>
      <th>
        Edit Market
      </th>
    </tr>
  </thead>
  <tbody>
    <% Market.all.each do |market|%>
      <tr>
        <td>
          <a href=<%= "/markets/#{market.id}" %>><%= market.name %></a>
        </td>
        <td>
          <%= market.city%>
        </td>
        <td>
          <%= market.state %>
        </td>
        <td>
          <a href =<%= "#{edit_market_path(market)}"%>>Edit</a>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
