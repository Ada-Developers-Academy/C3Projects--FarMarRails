<%= form_for item do |f| %>
  <%= f.label :name, "#{name_desc}" %>
  <%= f.text_field :name, class: "form_field", required: true, autofocus: true, placeholder: name_placeholder %>
  <%= f.label :address, "#{address_desc}" %>
  <%= f.text_field :address, class: "form_field", placeholder: address_placeholder %>
  <%= f.label :city, "#{city_desc}" %>
  <%= f.text_field :city, class: "form_field", placeholder: city_placeholder %>
  <%= f.label :county, "#{county_desc}" %>
  <%= f.text_field :county, class: "form_field", placeholder: county_placeholder %>
  <%= f.label :state, "#{state_desc}" %>
  <%= f.select :state, us_states, include_blank: "--Select a State--", class: "form_field" %></p>
  <%= f.label :zip, "#{zip_desc}" %>
  <%= f.text_field :zip, class: "form_field", placeholder: zip_placeholder %>
  <%= f.submit submit_button, class: "submit_button" %>
<% end %>
