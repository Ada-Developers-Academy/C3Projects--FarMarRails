<% market_id = @vendor.market_id %>
<% vendor_id = params[:vendor_id] %>
<p><%= link_to "<< return to vendor portal", "/vendor_portal/#{vendor_id}" %></p>
<section class="form">
  <fieldset class="add_sale_form">
    <legend>Add a Sale</legend>
    <%= render partial: "form", locals: { url: market_vendor_sales_path(market_id, vendor_id),
                                          item: @sale,
                                          amount_desc: "Sale Amount ($)",
                                          amount_placeholder: "example: 2837",
                                          purchase_time_desc: "Sale Date",
                                          purchase_time_placeholder: nil,
                                          product_id_desc: "Product Name",
                                          submit_button: "add sale" }
    %>
  </fieldset>
</section>
