<h1>Create a Sale</h1>

<%= form_for @sale, url: { action: "create"} do |f| %>

  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.label :purchase_time %>
  <%= f.datetime_local_field :purchase_time %>

  <%= f.label :vendor_id %>
  <%= f.collection_select :vendor_id, Vendor.order(:name), :id, :name %>

  <%= f.label :product_id %>
  <%= f.collection_select :product_id, Product.order(:name), :id, :name %>

  <%= f.submit %>

<% end %>
