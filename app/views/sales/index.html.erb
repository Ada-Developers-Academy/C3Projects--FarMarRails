<h1> <%= "#{@vendor.name}"%> </h1>
<h2>Sales</h2>


<table>
  <th>Sale Amount</th>
  <th>Purchase Date</th>
  <th>Product</th>

    <% @vendor_sales.each do |sale| %>
  <tr>
    <td> <%= number_to_currency(sale.amount/100.00) %> </td>
    <td> <% if sale.purchase_time == nil %>
           <%= " " %>
         <% else %>
           <%= sale.purchase_time.strftime ("%m/%d/%Y") %>
         <% end %>
    </td>
    <td> <% if sale.product == nil %>
           <%= " " %>
         <% else %>
           <%= sale.product.name %>
         <% end %>
    </td>
  </tr>
    <% end %>

</table>

<h4>Total Amount</h4>
<%= number_to_currency(@total_amount/100.00) %>

<%= link_to "Add a Sale", new_vendor_sale_path(@vendor.id) %>
<%= link_to "Back to #{@vendor.name}", vendor_path(@vendor.id) %>

<h3>Sales for <%= Time.now.strftime("%B") %></h3>

<table>
  <th>Sale Amount</th>
  <th>Purchase Date</th>
  <th>Product</th>

    <% @sales_current_month.each do |sale| %>
  <tr>
    <td> <%= number_to_currency(sale.amount/100.00) %> </td>
    <td> <% if sale.purchase_time == nil %>
           <%= " " %>
         <% else %>
           <%= sale.purchase_time.strftime ("%m/%d/%Y") %>
         <% end %>
    </td>
    <td> <% if sale.product == nil %>
           <%= " " %>
         <% else %>
           <%= sale.product.name %>
         <% end %>
    </td>
  </tr>
    <% end %>
</table>

<h4>Total Amount for <%= Time.now.strftime("%B") %></h4>
<%= number_to_currency(@total_current_month/100.00)%>
