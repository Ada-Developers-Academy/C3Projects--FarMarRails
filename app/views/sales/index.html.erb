<%= render 'shared/header' %>

<h1>Sales for</h1>
<h1><%= @vendor.name %>:</h1>

<table>
  <tr>
    <th>Product Name</th>
    <th>Sale Amount</th>
    <th>Purchase Date/Time</th>
  </tr>

  <% @sales.each do |sale| %>
    <tr>
        <td><%= sale.product.name %></td>
        <td><%= number_to_currency(sale.amount / 100.00) %></td>
        <td><%= sale.purchase_time %></td>
        </td>
    </tr>
  <% end %>

  <tr>
    <td><h3>Total Sales: <%= number_to_currency(Vendor.total_sales(@vendor) / 100.00) %></h3></td>
  </tr>
</table>

<%= button_to "View Sales From The Past Month", current_month_vendor_sales_path, method: :get, class: "button" %>

<%= button_to "Add Sale", new_vendor_sale_path(@vendor.id), method: :get, class: "button" %>


<%= render "shared/footer" %>
