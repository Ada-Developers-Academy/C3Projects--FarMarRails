<%= form_for @sale do |f| %>
  <fieldset>
    <legend>  New Sale </legend>
      <%= f.label :product_id %>
      <%= f.text_field :product_id %>
      <!-- make above drop down menu and product name instead of id -->

      <%= f.label :amount %>
      <%= f.text_field :amount %>

      <%= f.label :purchase_time %>
      <%= f.text_field :purchase_time %>

      <%= f.hidden_field :vendor_id, value: @vendor_id %>

  </fieldset>
      <%= f.submit %>
<% end %>
