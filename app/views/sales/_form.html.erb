<%= form_for [ @vendor, @sale ] do |f| %>
  <%= f.label :amount, "Sale amount:" %>
  <%= f.text_field :amount, required: :true, placeholder: "$0.00"%>

  <%= f.label :purchase_time, "Time and date of sale:" %>
  <%= f.datetime_local_field :purchase_time, required: :true %>

  <%= f.hidden_field :vendor_id, value: params[:vendor_id] %>
  <%= f.hidden_field :product_id, value: @product.id %>

  <%= f.submit class: "button" %>
<% end %>
