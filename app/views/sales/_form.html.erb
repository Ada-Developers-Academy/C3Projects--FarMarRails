<%= form_for item, url: url do |f| %>
  <%= f.label :amount, "#{amount_desc}" %>
  <%= f.text_field :amount, class: "form_field", required: true, autofocus: true, placeholder: amount_placeholder %>
  <%= f.label :purchase_time, "#{purchase_time_desc}" %>
  <%= f.date_field :purchase_time, class: "form_field", required: true, autofocus: true, placeholder: purchase_time_placeholder %>
  <%= f.label :product_id, "#{product_id_desc}" %>
  <%= f.collection_select :product_id, @vendor.products, :id, :name, include_blank: "--Select a Product--" %></p>
  <%= f.hidden_field :vendor_id, value: params[:vendor_id] %>
  <%= f.submit submit_button, class: "submit_button" %>
<% end %>
