<%= form_for @sale, url: url do |f| %>

  <fieldset>
    <legend>Sale Details</legend>
    <%= f.label :amount, "Amount: " %>
    <%= f.text_field :amount, :required => true %>

    <%= f.hidden_field :purchase_time, :value => Time.now %> <!-- New form-->
    <%= f.hidden_field :vendor_id, :value => params[:vendor_id] %> <!-- Edit form -->
    <%= f.hidden_field :product_id, :value => params[:product_id] %> <!-- Edit form -->


  </fieldset>

    <%= f.submit 'Submit' %>

  <% end %>
