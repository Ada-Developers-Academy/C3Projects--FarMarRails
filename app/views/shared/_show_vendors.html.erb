<h1>Vendors at <%= @market.name %></h1>

<% if current_page?(controller: 'markets', action: 'vendors_index') %>
<!-- CREATE VENDOR BUTTON -->
<p class="center">(create vendor button)</p>
<% end %>
<table>
<tr>
  <th>
    ID
  </th>
  <th>
    Name
  </th>
  <th>
    Employees
  </th>
  <% if current_page?(controller: 'markets', action: 'vendors_index')%>
  <th class="center">
    Edit
  </th>
  <% end %>
</tr>
<tbody>
  <% @vendors.each do |vendor| %>
  <tr>
    <td>
      <%= vendor.id %>
    </td>
    <td>
      <%= vendor.name %>
    </td>
    <td>
      <%= vendor.num_employees %>
    </td>
    <% if current_page?(controller: 'markets', action: 'vendors_index')%>
      <td class="center">
        <%= link_to "Edit", edit_vendor_market_path %>
      </td>
    <% end %>
  </tr>
  <% end %>
</tbody>
</table>
