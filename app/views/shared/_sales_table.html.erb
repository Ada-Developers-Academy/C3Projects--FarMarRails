<table>
  <thead>
    <tr>
      <th>Time of Purchase</th>
      <th>Product</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% sales.each do |sale| %>
      <tr>
        <td><%= format_datetime(sale.purchase_time) %></td>
        <td><%= Product.find(sale.product_id).name %></td>
        <td class="financial"><%= format_money(sale.amount) %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="2">Sales Total</th>
      <td class="financial"><%= format_money(Sale.sum_amount(sales)) %></td>
    </tr>
  </tfoot>
</table>
