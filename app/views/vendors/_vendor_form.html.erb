<fieldset>
  <legend><%= legend %></legend>

  <%= form_for @vendor, url: url, method: method, html: {class: "forms"} do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, required: :true %>

    <%= f.label "Number of Employees" %>
    <%= f.text_field :num_employees %>

    <%= f.hidden_field(id, :value => "#{value}") %>

    <%= f.submit %>

  <% end %>

</fieldset>
