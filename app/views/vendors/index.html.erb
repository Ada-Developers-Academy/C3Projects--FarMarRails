<%= render 'shared/header' %>

<h1>Welcome to the Vendor Portal!</h1>

<table border = "0">
  <tr>
    <th>Vendor Name</th>
    <th>Products</th>
    <th>Sales</th>
  </tr>

<% @vendors.each do |vendor| %>
  <tr>
    <td><%= vendor.name %></td>
    <td><%= button_to "View Products", vendor_products_path(vendor), method: :get, class: "button" %></td>
    <td><%= button_to "View Sales", vendor_sales_path(vendor), method: :get, class: "button" %></td>
  </tr>
<% end %>
</table>


<%= render "shared/footer" %>
