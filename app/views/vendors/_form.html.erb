<%= form_for item, url: url do |f| %>
    <span class="form_field">
        <%= f.label :name, "#{name_desc}" %>
        <%= f.text_field :name, required: true, autofocus: true, placeholder: name_placeholder, value: name_value %>
    </span>
    <span class="form_field">
        <%= f.label :no_of_employees, "#{no_of_employees_desc}" %>
        <%= f.text_field :no_of_employees, placeholder: no_of_employees_placeholder, value: no_of_employees_value %>
    </span>
    <%= f.submit submit_button %>
<% end %>
