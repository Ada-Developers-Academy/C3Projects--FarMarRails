<section class="homepage">
  <div>
    <h1>Welcome back <%= @vendor.name %>!</h1>
    <h3>I would like to...</h3>
      <%= link_to "Add/Edit Products", "/markets/#{@vendor.market_id}/vendors/#{@vendor.id}/products/", class: "button_link"%>
      <%= link_to "Add a Sale", "/markets/#{@vendor.market_id}/vendors/#{@vendor.id}/sales/new", class: "button_link" %>
  </div>


  <div>
    <h1>Sales Information</h1>
    <h3>Total Sales: $<%= @total_sales %></h3>
    <table>
      <thead>
        <tr>
          <th>
            Amount
          </th>
          <th>
            Purchase Date
          </th>
          <th>
            Vendor ID
          </th>
          <th>
            Product
          </th>
        </tr>
      </thead>
      <tbody>
        <% @vendor.sales.all.each do |sale| %>
        <tr>
          <td>
            <%= sale.amount %>
          </td>
        <td>
          <%= sale.purchase_time.strftime("%m/%d/%Y") %>
        </td>
        <td>
          <%= sale.vendor_id %>
        </td>
        <td>
          <%= (Product.find(sale.product_id)).name %>
        </td>
        <% end %>
        </tr>
      </tbody>
    </table>

    <h3>Monthly Sales for <%= Date.today.strftime("%B") %>: $<%= @month_sales %></h3>
    <table>
      <thead>
        <tr>
          <th>
            Amount
          </th>
          <th>
            Purchase Time
          </th>
          <th>
            Vendor ID
          </th>
          <th>
            Product
          </th>
        </tr>
      </thead>
      <tbody>
        <% @vendor.sales.all.each do |sale| %>
          <% if sale.purchase_time.to_date.strftime("%Y-%m") == @date_today %>
            <tr>
              <td>
                <%= sale.amount %>
              </td>
              <td>
                <%= sale.purchase_time.strftime("%m/%d/%Y") %>
              </td>
              <td>
                <%= sale.vendor_id %>
              </td>
              <td>
                <%= (Product.find(sale.product_id)).name %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
