body {
  font-family: 'Muli', sans-serif;
  width: 960px;
  margin: auto;
  margin-top: 70px;
}


h1 {
  text-align: center;
}

.home-background {
  background-image: url(<%= asset_path "Light-Wood.jpg" %>);
  background-size: 100%;
}

.market-background {
  background-image: url(<%= asset_path "market_background.jpg" %>);
  background-size: 100%;
  margin-top: 10px;
}

.vendor-background {
  background-image: url(<%= asset_path "vendor_background.jpg" %>);
  background-size: 100%;
  margin-top: 10px;
}

.buttons_inline .button_to {
  display: inline-block;
}

.sort_markets {
  display: inline-block;
  float: right;
  padding: 0 0 0 10px;
  text-align: center;
  margin-bottom: 4px;
  text-align: center;
}

.new_market {
  display: inline-block;
}

.button, .inner_button {
  -webkit-border-radius: 5;
  -moz-border-radius: 5;
  border-radius: 5px;
  font-family: 'Muli', sans-serif;
  color: #ffffff;
  font-size: 12px;
  background: #9ac6e3;
  padding: 5px;
  text-decoration: none;
}

.inner_button {
  color: #465c69;
  font-weight: bold;
  }

.button:hover, .inner_button {
  background: #72b6e0;
  text-decoration: none;
}


table {
  margin: auto;
  text-align: center;
}

table td, th {
  text-align: center;
  padding: 10px 1%;
}

table td:nth-child(2), td:first-child {
  width: 25%;
}

input, select {
  display: block;
  text-align: center;
}

div.text_box {
  margin-left: auto;
  margin-right: auto;
  padding: 50px;
  padding-bottom: 200px;
  background-color: #ffffff;
  border: 1px solid black;
  opacity:0.7;
  max-height: 500px;
  overflow-y: scroll;
  margin-top: 10px;
}


