  body {
    font-family: 'Roboto', sans-serif;
    font-size: 15px;
    background-color: #F4F5E3;
    font-weight: 300;
  }

  .container {
    width: 1000px;
    margin: 20px auto;
  }

  header {
    height: 300px;
    overflow: hidden;
  }

  header img {
    width: 100%;
    display: inline-block;
  }

  h1 {
    font-family: 'Old Standard TT', serif;
    border-bottom: solid;
  }

  h2 {
    color: #900001;
    font-weight: 300;
  }

  h3 {
    text-align: center;
    font-family: 'Old Standard TT', serif;

  }

  form {
    width: 30%;
    margin: 30px auto;
  }

  fieldset label, fieldset input,  fieldset select {
    display: block;
    }

  .edit_delete {
    text-decoration: none;
    font-weight: 700;
    opacity: 0.5;
    color: #262626;
  }

  .edit_delete:hover {
    opacity: 1;
    color: #262626;
  }

  .products {
    width: 300px;
  }

  .link {
    margin: 0 auto;
    display: block;
    text-align: center;
    text-decoration: none;
    border-color: #E5132F;
    border-radius: 28px;
    width: 25%;
    -webkit-border-radius: 28;
    -moz-border-radius: 28;
    border-radius: 28px;
    font-family: Arial;
    color: #F4F5E3;
    font-size: 20px;
    background: #262626;
    padding: 10px 20px 10px 20px;
    text-decoration: none;
}

.link:hover {
  background: #ebeaeb;
  color: #262626;
  text-decoration: none;
  border: solid #262626 1px;
}

.home_buttons {
  margin: 1% auto;

}

  p {
    display: inline-block;
    padding: 20px;
  }

  span {
    font-weight: 700;
  }

  footer {
    background-color: #000;
    color: #EBEAEB;
  }

  footer a {
    text-decoration: none;
    display: inline-block;
    color: #EBEAEB;
    margin: 30px;
  }

  table {
    border-radius: 25px;
    border-color: #E5132F;
    border: 1px solid #262626;
    padding: 35px;
    margin: 10px auto;
    width: 1000px;
  }

  th {
    text-align: left;
